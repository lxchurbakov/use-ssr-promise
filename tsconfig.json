{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2015",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es2021",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "resolveJsonModule": true,
        "baseUrl": "lib"
    }
}